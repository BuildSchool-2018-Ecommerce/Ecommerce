@model ShoppingCartViewModel
@{
    ViewBag.Title = "CheckOut";
    decimal total = 0.0M;
    foreach (var item in Model.ShoppingIconView)
    {
        if (item.Sale == 0)
        {
            total = total + (item.Quantity * item.UnitPrice);
        }
        else
        {
            total = total + (item.Quantity * item.Sale);
        }
    }
}

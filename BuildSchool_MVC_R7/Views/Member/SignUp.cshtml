@using (Html.BeginForm("SignUp", "Member"))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6 p-b-30">
                <form class="leave-comment">
                    <h4 class="m-text26 p-b-36 p-t-15">
                        會員申請 Member Sing Up
                    </h4>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="MemberID" placeholder="帳號 Account Number">*@
                        @Html.TextBoxFor(model => model.MemberID, htmlAttributes: new { @class = "sizefull s-text7 p-l-22 p-r-22", placeholder = "帳號 Account Number" })
                        @Html.ValidationMessageFor(model => model.MemberID)
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="password" name="Password" placeholder="密碼 Password">*@
                        @Html.TextBoxFor(model => model.password, htmlAttributes: new { @class = "sizefull s-text7 p-l-22 p-r-22", placeholder = "密碼 Password", @type = "password" })
                        @Html.ValidationMessageFor(model => model.password)
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="password" name="Password" placeholder="密碼 Password">*@
                        @Html.TextBoxFor(model => model.passwordCheck, htmlAttributes: new { @class = "sizefull s-text7 p-l-22 p-r-22", placeholder = "確認密碼 Password", @type = "password" })
                        @Html.ValidationMessageFor(model => model.passwordCheck)
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="Name" placeholder="姓名 Name">*@
                        @Html.TextBoxFor(model => model.name, htmlAttributes: new { @class = "sizefull s-text7 p-l-22 p-r-22", placeholder = "姓名 Name" })
                        @Html.ValidationMessageFor(model => model.name)
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="Phone" placeholder="手機號碼 Phone">*@
                        @Html.TextBoxFor(model => model.Phone, htmlAttributes: new { @class = "sizefull s-text7 p-l-22 p-r-22", placeholder = "手機號碼 Phone" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="Address" placeholder="地址 Address">*@
                        @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "sizefull s-text7 p-l-22 p-r-22", placeholder = "地址 Address" })
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        @*<input class="sizefull s-text7 p-l-22 p-r-22" type="email" name="Email" placeholder="電子郵件 E-Mail">*@
